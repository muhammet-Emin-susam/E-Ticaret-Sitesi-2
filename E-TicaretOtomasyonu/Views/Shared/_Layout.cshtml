@using E_TicaretOtomasyonu.Models

@{
    if (Session["ID"] == null)
    {
        Response.Redirect("/Login/Index");
    }

    TBLKATEGORILER ct = isStatic.getKategori().FirstOrDefault();
    var model = isStatic.getKategori().ToList();
    TBLBILGILER bt = isFooter.getFooter().FirstOrDefault();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Konoha Template">
    <meta name="keywords" content="Konoha, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>E-Ticaret Otomasyonu | Tüm Hakları Saklıdır</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/responsive.css">
    <link rel="stylesheet" href="~/Content/css/layout.css">
    <link rel="stylesheet" href="~/Content/css/index.css">
    <link rel="stylesheet" href="~/Content/css/blog.css">
    <link rel="stylesheet" href="~/Content/css/contact.css">
    <link rel="stylesheet" href="~/Content/css/shop-details.css">
    <link rel="stylesheet" href="~/Content/css/shop-grid.css">
    <link rel="stylesheet" href="~/Content/css/shoping-cart.css">
    <link href="~/Content/toastr.min.css" rel="stylesheet" />

</head>
<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Humberger Begin -->
    <div class="humberger__menu__overlay"></div>
    <div class="humberger__menu__wrapper">
        <div class="humberger__menu__logo">
            <a href="#"><img src="~/Content/img/logo.png" alt=""></a>
        </div>
        <div class="humberger__menu__cart">
            <ul>
                <li><a href="#"><i class="fa fa-heart"></i> <span>1</span></a></li>
                <li><a href="#"><i class="fa fa-shopping-bag"></i> <span>3</span></a></li>
            </ul>
        </div>
        <div class="humberger__menu__widget">
            <div class="header__top__right__language">
                <img src="~/Content/img/language.png" alt="">
                <div>English</div>
                <span class="arrow_carrot-down"></span>
                <ul>
                    <li><a href="#">Spanis</a></li>
                    <li><a href="#">English</a></li>
                </ul>
            </div>
            <div class="header__top__right__auth">
                <a href="#"><i class="fa fa-user"></i> Login</a>
            </div>
        </div>
        <nav class="humberger__menu__nav mobile-menu">
            <ul>
                <li class="active"><a href="/Home/Index">Home</a></li>
                <li><a href="./shop-grid.html">Shop</a></li>

                <li>
                    <a href="#">Pages</a>
                    <ul class="header__menu__dropdown">
                        <li><a href="./shop-details.html">Shop Details</a></li>
                        <li><a href="./shoping-cart.html">Shoping Cart</a></li>

                    </ul>
                </li>
                <li><a href="./blog.html">Blog</a></li>
                <li><a href="./contact.html">Contact</a></li>

            </ul>
        </nav>
        <div id="mobile-menu-wrap"></div>
        <div class="header__top__right__social">
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-linkedin"></i></a>
            <a href="#"><i class="fa fa-pinterest-p"></i></a>
        </div>
        <div class="humberger__menu__contact">
            <ul>
                <li><i class="fa fa-envelope"></i> hello@colorlib.com</li>
                <li>Free Shipping for all Order of $99</li>
            </ul>
        </div>
    </div>
    <!-- Humberger End -->
    <!-- Header Section Begin -->
    <header class="header">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <div class="header__logo">
                        <a href="/Home/Index"><img src="~/Content/img/logo-header.png"></a>
                    </div>
                </div>
                @if (Session["ID"] == null)
                {
                    <div class="col-lg-6">
                        <nav class="header__menu">
                            <ul>
                                <li><a href="/Home/Index">Anasayfa</a></li>
                                <li>
                                    <a href="#">Kategoriler</a>
                                    <ul class="header__menu__dropdown">
                                        @Html.Action("getKategori", "Home")
                                        @*<li><a asp-action="ShopDetail" asp-controller="Home">Shop Details</a></li>
                                            <li><a asp-action="ShopCart" asp-controller="Home">Shopping Cart</a></li>*@
                                    </ul>
                                </li>
                                <li><a href="/Login/Index">Giriş Yap</a></li>
                            </ul>
                        </nav>
                    </div>
                }
                else
                {
                    <div class="col-lg-8">
                        <nav class="header__menu">
                            <ul>
                                <li><a href="/Home/Index">Anasayfa</a></li>
                                <li>
                                    <a href="#">Kategoriler</a>
                                    <ul class="header__menu__dropdown">
                                        @Html.Action("getKategori", "Home")
                                        @*<li><a asp-action="ShopDetail" asp-controller="Home">Shop Details</a></li>
                                            <li><a asp-action="ShopCart" asp-controller="Home">Shopping Cart</a></li>*@
                                    </ul>
                                </li>

                                <li><a href="/Profil/Index/@Session["ID"]">Profilim</a></li>
                                <li><a href="/Siparisler/Index">Siparişlerim</a></li>

                            </ul>
                        </nav>
                    </div>
                }

                <div class="col-lg-2" id="navbar-right">
                    <div class="header__cart">
                        <ul>
                            @Html.Action("SepetMenusu", "Sepet")

                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->

    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer Section Begin -->
    <footer class="footer spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="footer__about">
                        <div class="footer__about__logo">
                            <a asp-controller="Home" asp-action="Index"><img src="~/Content/img/logo-footer.png"></a>
                        </div>
                        <ul>
                            <li>Adres : @bt.Adres </li>
                            <li>Tel No: @bt.TelNo</li>
                            <li>Email: @bt.Email</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 offset-lg-1">
                    <div class="footer__widget">
                        <h6>Kategoriler</h6>
                        <ul>
                            @foreach (var item in model)
                            {
                                    <li><a href="#">@item.KategoriAD</a></li>
                            }

                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="footer__widget">
                        <h6>En yeni gelişmeler için sayfamızı takip edin!</h6>
                        <p>Get E-mail updates about our latest shop and special offers.</p>
                        @*<form action="#">
                            <input type="text" placeholder="Enter your mail">
                            <button type="submit" class="site-btn">Subscribe</button>
                        </form>*@
                        <div class="footer__widget__social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-pinterest"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="footer__copyright">
                        <div class="footer__copyright__text"><p>Bu Site Telif Hakları İle Saklıdır <i class="fa fa-heart" aria-hidden="true"></i> ve <a href="#" target="_blank">Bekir Dündar Tarafından Yapılmıştır.</a></p></div>
                        <div class="footer__copyright__payment"><img src="~/Content/img/payment-item.png" alt=""></div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="~/Content/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery.nice-select.min.js"></script>
    <script src="~/Content/js/jquery-ui.min.js"></script>
    <script src="~/Content/js/jquery.slicknav.js"></script>
    <script src="~/Content/js/mixitup.min.js"></script>
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <script src="~/Content/js/main.js"></script>
    <script src="~/Content/js/shop-grid.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/axios.js"></script>
    <script src="~/Scripts/SisyaData.js"></script>
    @RenderSection("Adjs", false)

</body>
</html>
