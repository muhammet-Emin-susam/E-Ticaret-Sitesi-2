@section Adjs{
    <script>
        function SepeteEkle(ID) {
            /*var ID = $("#ProductID").val();*/
            getValue("Sepet/SepeteEkle",
                { ID: ID },
                function (data, err) {
                    if (!data) {
                        return;
                    } else if (data == 'Başarılı') {
                        $('#KartEklendi').modal('show');
                    }
                    else if (data.indexOf('Hata') > -1) {
                        alert(data)
                    }
                });
        };
    </script>
}